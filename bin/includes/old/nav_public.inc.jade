mixin nav-item(href,title)
	li
		.panel-group
			.panel.panel-default
				a.panel-default(href=href) 
					.panel-heading
						h4.panel-title #{title}
ul.nav-offcanvas
	+nav-item('announcements.asp','View Announcements')
	+nav-item("javascript:$('#email').val('guest@guest.com');$('#pass').val('123456');$('#loginfrm').submit();",'Demo Dashboard')
	+nav-item('about.asp','About')